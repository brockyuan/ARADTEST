<% provide(:title, 'Sign up') %>


<link href="https://fonts.googleapis.com/css?family=Raleway:400,500,600|Roboto" rel="stylesheet">

<div class="row" style="max-width:600px;font-family:Roboto;margin:0 auto">
  <div class="col-md-6 col-md-offset-3" style="margin-left:150px">

    <div class="information" >
      <h1>Sign up</h1>
      <h2>You can register for ARAD here</h2>
    </div>


    <%= form_for(@user, url: signup_path) do |f| %>

    <%= render 'shared/error_messages', object: f.object, :style=>'border:1px solid black'%>


      <%= f.label :name%>
      <br>
      <%= f.text_field :name, class: 'form-control', placeholder: "Full Name", :style=>'width:40%', :style=>'margin:0 0 3px 0'%>
      <br>

      <%= f.label :email %>
      <br>
      <%= f.email_field :email, class: 'form-control', placeholder: "Email Address", :style=>'width:40%', :style=>'margin:0 0 3px 0'%>
      <br>

      <%= f.label :password %>
      <br>
      <%= f.password_field :password, class: 'form-control', placeholder: "Password", :style=>'width:40%', :style=>'margin:0 0 3px 0'%>
      <br>

      <%= f.label :password_confirmation, "Confirm password" %>
      <br>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm Password", :style=>'width:40%', :style=>'margin:0 0 3px 0'%>
      <br>

      <br>
      <%= f.submit "Signup", class: "btn btn-primary", :style=>'cursor:pointer', :style=>'width:40%', :style=>'margin:0 0 3px 0'%>
      <br>
      <br>
      <%= link_to "Back to Home Page", root_path, :style=>'cursor:pointer', :style=>'margin: 0 0 3px 0'%>

    <% end %>
  </div>
</div>
